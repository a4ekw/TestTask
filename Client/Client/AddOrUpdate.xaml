<Window x:Class="Client.AddOrUpdate"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Client"
        mc:Ignorable="d"
        WindowStartupLocation="CenterOwner" Height="270" Width="350" ResizeMode="NoResize">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Image x:Name="img" Height="100" Margin="20,10,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Width="100"/>
        <Button Name="chooseButton" Content="Choose image..." Margin="170,90,50,0" VerticalAlignment="Top" Click="chooseButton_Click"/>
        <TextBox x:Name="textBox" Height="25" Margin="10,140,10,0" TextAlignment="Center" VerticalAlignment="Top"/>
        <StackPanel Orientation="Horizontal" Height="39" Width="auto" Margin="77,0,77,10" VerticalAlignment="Bottom">
            <Button x:Name="okButton" Content="Ok" VerticalAlignment="Top" Margin="10" Width="75" Click="okButton_Click"/>
            <Button x:Name="cancelButton" Content="Cancel" VerticalAlignment="Top" Margin="10" Width="75" Click="cancelButton_Click_1"/>
        </StackPanel>

    </Grid>
</Window>
